# ── Database ───────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://postgres:password@localhost:5432/versiongate"

# ── App ────────────────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ── Docker ─────────────────────────────────────────────────────────────────────
DOCKER_NETWORK="versiongate-net"

# ── Nginx ──────────────────────────────────────────────────────────────────────
NGINX_CONFIG_PATH="/etc/nginx/conf.d/upstream.conf"

# ── Git ────────────────────────────────────────────────────────────────────────
# Base directory where project source code is cloned
PROJECTS_BASE_PATH="/var/versiongate/projects"
# Personal access token for private repositories (optional)
GIT_TOKEN=""

# ── Validation ─────────────────────────────────────────────────────────────────
# Max time (ms) to wait for a health check response
HEALTH_TIMEOUT_MS=5000
# Delay (ms) between health check retries
HEALTH_RETRY_DELAY_MS=2000
# Max acceptable response latency (ms) — fail if exceeded
HEALTH_MAX_LATENCY_MS=2000
# Number of retry attempts before marking container unhealthy
HEALTH_MAX_RETRIES=5
